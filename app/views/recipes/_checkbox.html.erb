<%= form_with(model: recipe, url: recipe_path(recipe), method: :patch, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe change public:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.check_box :public, onchange: "this.form.submit()" %>
  </div>

<% end %>
