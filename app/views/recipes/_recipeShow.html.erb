<div id="<%= dom_id recipe %>" class="dom-recipe-class2">

  <p class="show_name"><strong><%= recipe.name %></strong></p>

  <div class="show-display">
    <div class="recipe-time">
      <p>Preparation time: <%= recipe.preparation_time %> </p>
      <p>Cooking time: <%= recipe.cooking_time %> </p>
      <p>Steps go here...</p>
    </div>
    <div class="public-label">
      <h2 class="public"><strong>Public:</strong> </h2>
      <%= render "checkbox", recipe: recipe %>
    </div>
   </div>
      
    <div class="show-buttons">
      <button>Generate Shopping List</button>
      <%=form_with model: RecipeFood.new, url: new_recipe_recipe_food_path(@recipe), method: :get do %>
        <button>Add Ingredient</button>
      <%end%>
    </div>
      
</div>
      
      