<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="form" >
  <div class="field">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :preparation_time, style: "display: block" %>
    <%= form.datetime_field :preparation_time %>
  </div>

  <div class="field">
    <%= form.label :cooking_time, style: "display: block" %>
    <%= form.datetime_field :cooking_time %>
  </div>

  <div class="field">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :public, style: "display: block" %>
    <%= form.check_box :public %>
  </div>

  <div class="field">
  <%= form.label :user_id_id, style: "display: block" %>
  <%= form.text_field :user_id_id, value: current_user.id, readonly: true, class: 'disabled-text-field' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
</div>
<% end %>
